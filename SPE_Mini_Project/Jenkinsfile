pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub_credentials')  
        DOCKER_IMAGE = "praveenpeterjay2/miniproj_image1"
        DOCKER_TAG = "1.0"
        EMAIL_RECIPIENTS = "praveenpeterjay@gmail.com"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/PraveenPeterJay/SPE_Mini_Project.git'
            }
        }

        stage('Test') {
            steps {
                dir('SPE_Mini_Project') {
                    sh 'mvn test'
                }
            }
            post {
                always {
                    junit 'SPE_Mini_Project/**/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Build JAR') {
            steps {
                dir('SPE_Mini_Project') {
                    sh 'mvn clean package'
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('SPE_Mini_Project') {
                    sh "docker build -t $DOCKER_IMAGE:$DOCKER_TAG ."
                }
            }
        }

        stage('Run Application with Inputs') {
            steps {
                dir('SPE_Mini_Project') {
                    sh 'docker run --rm -i praveenpeterjay2/miniproj_image1:1.0 < input.txt'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                dir('SPE_Mini_Project') {
                    sh """
                    echo "$DOCKERHUB_CREDENTIALS_PSW" | docker login -u "$DOCKERHUB_CREDENTIALS_USR" --password-stdin
                    docker push $DOCKER_IMAGE:$DOCKER_TAG
                    docker logout
                    """
                }
            }
        }

        stage('Deploy with Ansible') {
            steps {
                dir('SPE_Mini_Project') {
                    sh "ansible-playbook -i ansible/hosts ansible/deploy.yml"
                }
            }
        }
    }

    post {
        success {
            echo "Build and deployment completed successfully!"
            mail to: "${EMAIL_RECIPIENTS}",
                 subject: "SUCCESS: Jenkins Pipeline - ${JOB_NAME} #${BUILD_NUMBER}",
                 body: "Good news! The pipeline '${JOB_NAME}' build #${BUILD_NUMBER} succeeded.\n${BUILD_URL}"
        }

        failure {
            echo "Build or deployment failed. Check logs above."
            mail to: "${EMAIL_RECIPIENTS}",
                 subject: "FAILURE: Jenkins Pipeline - ${JOB_NAME} #${BUILD_NUMBER}",
                 body: "Alert! The pipeline '${JOB_NAME}' build #${BUILD_NUMBER} failed.\n${BUILD_URL}"
        }

        always {
            echo "Pipeline finished."
        }
    }
}
